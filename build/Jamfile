using openssl ;

project boost/tls
    : requirements
      <link>shared:<define>BOOST_TLS_DYN_LINK=1
      <link>static:<define>BOOST_TLS_STATIC_LINK=1
      <define>BOOST_TLS_SOURCE
      <library>/openssl//ssl
    : usage-requirements
      <link>shared:<define>BOOST_TLS_DYN_LINK=1
      <link>static:<define>BOOST_TLS_STATIC_LINK=1
      <library>/openssl//ssl
    : source-location ../src
    ;

alias tls_sources
   : src.cpp
   ;

explicit tls_sources ;

lib boost_tls
   : tls_sources
   ;

boost-install boost_tls ;
